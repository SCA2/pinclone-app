nav.navbar.navbar-toggleable-md.navbar-inverse.bg-inverse.fixed-top
  button.navbar-toggler.navbar-toggler-right(type="button" data-toggle="collapse" data-target="#navbar-collapse")
    span.navbar-toggler-icon
  a.navbar-brand(href="/") FCC Pinterest Clone
  .navbar-collapse.collapse#navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item
        a.nav-link(href='/favorites') All Links
      if isLoggedIn
        li.nav-item
          a.nav-link(href='/users/' + user._id + '/favorites') My Links
        li.nav-item
          a.nav-link(href='/favorites/new') New Link
    ul.navbar-nav.navbar-right
      li.nav-item
        if isLoggedIn
          a.nav-link(href='/users/' + user._id) Profile
      li.nav-item
        if isLoggedIn
          a.nav-link(href="/logout") Logout
        else
          a.nav-link(href="/auth/twitter") Login with Twitter
extends ../layout/layout.pug

block content
  section
    .container
      .card-columns
        if favorites
          each favorite in favorites
            .card(style="min-height: 350px")
              a(href='/favorites/' + favorite._id)
                img.card-img-top.img-fluid(src=favorite.link)
              .card-block
                h4.card-title=favorite.title
                a(href='/users/' + favorite.author + '/favorites')
                  img.card-img-top.img-fluid(src=favorite.avatarURL)
                p.card-text="Likes " + favorite.likes.length

extends ../layout/layout.pug

block content
  .container-fluid
    .row
      .col-sm-8.offset-sm-2
        form(action="/users/" + user._id method="post")
          div.text-center
            h3 User Profile
          div.row.form-group
            label.col-form-label.col-sm-2(for="id") Twitter ID
            input.form-control.col-sm-10(type="text" name="id" value=user.twitter.id readonly)
          div.row.form-group
            label.col-form-label.col-sm-2(for="username") User Name
            input.form-control.col-sm-10(type="text" name="username" value=user.twitter.username readonly)
          div.row.form-group
            label.col-form-label.col-sm-2(for="displayName") Display Name
            input.form-control.col-sm-10(type="text" name="displayName" value=user.twitter.displayName readonly)
          div.row.form-group
            label.col-form-label.col-sm-2(for="profileImage") Avatar URL
            input.form-control.col-sm-10(type="text" name="avatarURL" value=user.twitter.avatarURL readonly)
